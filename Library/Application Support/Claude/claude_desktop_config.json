{
  "globalShortcut": "",
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "mcp-server-duckdb": {
      "command": "${HOME}/.cargo/bin/uvx",
      "args": [
        "mcp-server-motherduck",
        "--db-path",
        "${HOME}/Library/Mobile Documents/com~apple~CloudDocs/Document/DuckDB/local.db"
      ]
    },
    "claude_code": {
      "command": "/opt/homebrew/bin/claude",
      "args": ["mcp", "serve"],
      "env": {}
    }
  }
}
